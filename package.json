{
  "name": "nodejs-pokedex-api",
  "version": "1.0.0",
  "description": "Nous allons tâcher de créer une API permettant d'effectuer des opérations CRUD sur les pokémons. Ce projet sera réalisé avec Express pour la gestion des routes et avec une base de donnée NoSQL.",
  "main": "build/index.js",
  "author": "Lorenzo vandenkoornhuyse$",
  "scripts": {
    "dev": "nodemon --exec ts-node --files ./src/index.ts",
    "start": "node ./build/index.js",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "db:reset": "prisma migrate reset --force && prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vfourny/nodejs-pokedex-api.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vfourny/nodejs-pokedex-api/issues"
  },
  "homepage": "https://github.com/vfourny/nodejs-pokedex-api#readme",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.8.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.9",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
